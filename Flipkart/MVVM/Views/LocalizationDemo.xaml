<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Flipkart.MVVM.Views.LocalizationDemo"
             Title="LocalizationDemo">
    <VerticalStackLayout>
        <!--Using Localization resource Manager-->
        <Label 
            Text="{Binding localizationResourceManager[EnterEmailLabel], Mode=OneWay}"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
        <Button x:Name="changeLocale"
                Text="Change Lang"
                TextColor="white"
                BackgroundColor="Orange"
                FontAttributes="Bold"
                Margin="20,10"
                VerticalOptions="Center"
                Clicked="ChangeLocale"/>
    </VerticalStackLayout>
</ContentPage>