<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Flipkart.MVVM.Views.LoginPage"
             xmlns:local="clr-namespace:Flipkart.Resources.Localization"
             Title="LoginPage"
             xmlns:utilities="clr-namespace:Flipkart.Utilities"
             Shell.NavBarIsVisible="False">
        <Grid RowDefinitions=".1*,.8*,.1*">
                <Grid ColumnDefinitions=".1*,.9*"
                      BackgroundColor="{StaticResource FlipkartBlue}">
                        <Label Text="x"
                               TextColor="White"
                               FontSize="25"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                                </Label.GestureRecognizers>
                        </Label>
                        <Image Grid.Column="0"
                                Grid.ColumnSpan="2"
                                        HeightRequest="35"
                                        Source="fliplogo.svg"
                                        HorizontalOptions="Center"/>
                </Grid>
                <Border Grid.Row="1"
                        Margin="0,-15,0,0"
                        StrokeShape="RoundRectangle 15,15,0,0"
                        StrokeThickness="0"
                        BackgroundColor="White">

                        <Grid RowDefinitions=".3*,.3*,.2*,*"
                              Margin="20,0,20,0">
                                <VerticalStackLayout VerticalOptions="Center">
                                        <Label Text="{Static local:resource.Login}"
                                               FontSize="18"
                                               FontAttributes="Bold"/>
                                        <Label Text="Enter your phone number to continue"
                                               TextColor="Grey"
                                               FontSize="15"
                                               Margin="0,5,0,0"/>
                                </VerticalStackLayout>
                                <VerticalStackLayout Grid.Row="1" Spacing="5">
                                <Border Grid.Row="1"
                                        StrokeShape="RoundRectangle 5,5,5,5"
                                        Padding="5">
                                        <Entry Placeholder="Email ID"
                                               FontSize="15"
                                               x:Name="email"
                                               Text="{Binding Email}"
                                               Completed="Entry_Completed"
                                               FontAttributes="Bold"
                                               VerticalOptions="Center"/>
                                </Border>
                                <Border Grid.Row="2"
                                        StrokeShape="RoundRectangle 5,5,5,5"
                                        Padding="5">
                                        <Entry Placeholder="Password"
                                               FontSize="15"
                                               Text="{Binding Password}"
                                               x:Name="password"
                                               Completed="Entry_Completed"
                                               FontAttributes="Bold"
                                               VerticalOptions="Center"/>
                                </Border>
                                </VerticalStackLayout>
                                <VerticalStackLayout Grid.Row="2"
                                                     Margin="0,10,0,0"
                                                     Spacing="15">
                                        <!-- <Label Text="Use Phone Number"
                                               HorizontalTextAlignment="End"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource FlipkartBlue}"/> -->
                                        <FlexLayout Direction="Row"
                                                    Wrap="Wrap">
                                                <Label Text="By continuing, you agree to Flipkart's"
                                                       FontSize="15"/>
                                                <Label Text="Terms of Use"
                                                       FontSize="15"
                                                       TextColor="{StaticResource FlipkartBlue}"/>
                                                <Label Text="and"
                                                       FontSize="15"/>
                                                <Label Text=" Privacy Policy"
                                                       FontSize="15"
                                                       TextColor="{StaticResource FlipkartBlue}"/>
                                        </FlexLayout>
                                </VerticalStackLayout>
                        </Grid>
                </Border>
                <VerticalStackLayout Grid.Row="2"
                                     VerticalOptions="Center">
                        <BoxView HeightRequest="0.5"/>
                        <Button x:Name="continueBtn"
                                Text="Continue"
                                TextColor="white"
                                BackgroundColor="Orange"
                                FontAttributes="Bold"
                                Margin="20,10"
                                VerticalOptions="Center"
                                IsEnabled="False"
                                Command="{Binding LoginCommand}"/>
                </VerticalStackLayout>
                <ActivityIndicator
                Grid.Row="1"
                HorizontalOptions="CenterAndExpand"
                IsRunning="{Binding IsBusy}"
                IsVisible="{Binding IsBusy}"
                VerticalOptions="CenterAndExpand" />
        </Grid>
</ContentPage>